<% content_for :title, "Terrepets > The Bank" %>
<h3>The Bank</h3>

<ul class='tabbed'>
	<li class='activetab'><%= link_to 'The Bank', bank_path %></li>
	<li><%= link_to 'Buy Stars', bank_stars_path %></li>
</ul>

<p>Bank Balance: <%= current_user.savings %></p>

<%= form_tag bank_transact_path, method: :post do |f| %>
	<table>
		<tbody>
			<tr>
				<td>
					<%= radio_button_tag 'type', :deposit, checked = true %>
					<%= label_tag :deposit %>
					<br/>					
					<%= radio_button_tag 'type', :withdraw %>
					<%= label_tag :withdraw %>
				</td>
				<td>
					<%= number_field_tag 'amount', nil, :min =>0, size: 10 %>
				</td>
				<td>
					<%= submit_tag 'Transact' %>
				</td>
			</tr>
		</tbody>
	</table>
<% end %>